generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Workday {
  id        String     @id @default(uuid())
  date      DateTime   @unique
  schedules Schedule[]
}

model Schedule {
  id           String       @id @default(uuid())
  employeeId   String
  workdayId    String
  createdAt    DateTime     @default(now())
  assignedById String
  type         ScheduleType @default(FAIR)
  assignedBy   User         @relation("AssignedBy", fields: [assignedById], references: [id])
  employee     User         @relation("EmployeeSchedules", fields: [employeeId], references: [id])
  workday      Workday      @relation(fields: [workdayId], references: [id])
}

model User {
  id                String     @id @default(uuid())
  email             String     @unique
  password          String
  fullName          String
  role              Role       @default(EMPLOYEE)
  createdAt         DateTime   @default(now())
  position          String
  preferredDays     String[]
  assignedSchedules Schedule[] @relation("AssignedBy")
  schedules         Schedule[] @relation("EmployeeSchedules")
}

enum ScheduleType {
  FAIR
  BASIC
  RANDOM
  ROUND_ROBIN
  MANUAL
}

enum Role {
  ADMIN
  EMPLOYEE
}
